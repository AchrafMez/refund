# ====================
# Environment Template
# ====================
# Copy this file to .env and fill in the values
# .env is for LOCAL development WITHOUT Docker
# Docker-compose files override these for containerized environments

# Database (for local dev - use localhost:5433)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/local_db
DIRECT_URL=postgresql://postgres:postgres@localhost:5433/local_db

# Authentication
AUTH_SECRET=your-secret-key-generate-with-openssl-rand-base64-32
AUTH_42_SCHOOL_ID=your-42-school-oauth-client-id
AUTH_42_SCHOOL_SECRET=your-42-school-oauth-client-secret
REDIRECT_URL=http://localhost:3000/api/auth/callback/42-school
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Production overrides (set in docker-compose or deployment platform)
# BETTER_AUTH_URL=https://your-production-domain.com
# NEXT_PUBLIC_BETTER_AUTH_URL=https://your-production-domain.com
